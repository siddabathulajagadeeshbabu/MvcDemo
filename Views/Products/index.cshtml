@using MvcDemo.Models
@using System.Data
@using System.Data.SqlClient
@{ViewData["Title"] = "Products";}
<h2> Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Tables.Count > 0)
        {
            var productsTable = Model.Tables[0];
            foreach (DataRow row in productsTable.Rows)
            {
                <tr>
                    <td>@row["Id"]</td>
                    <td>@row["Name"]</td>
                    <td>@row["Price"]</td>
                </tr>
            }
        }
    </tbody>
</table>